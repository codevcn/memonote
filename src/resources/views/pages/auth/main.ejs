<main id="page-main">
    <form action="#" method="post" onsubmit="signInHandler(event)" class="type-password-section">
        <div class="form-group">
            <div class="input-wrapper">
                <input type="password" name="password" onfocus="handleOnFocusTypePasswordInput(this)"
                    onblur="handleOnBlurTypePasswordInput(this)" oninput="typingPassword()" />
                <div class="input-animation"></div>
                <div class="input-placeholder">
                    <%= t('signin-page.Enter_password',i18nLang) %>...
                </div>
                <div class="input-actions">
                    <span class="hidden" onclick="hideShowPassword_signInPage(this,false)">
                        <i class="bi bi-eye-slash"></i>
                    </span>
                    <span class="shown inactive" onclick="hideShowPassword_signInPage(this,true)">
                        <i class="bi bi-eye"></i>
                    </span>
                </div>
            </div>
        </div>
        <div class="input-message"></div>
        <button class="submit-btn" type="submit">
            <span>
                <%= t('signin-page.Submit',i18nLang) %>
            </span>
        </button>
        <div class="sign-in-message"></div>
    </form>
</main>